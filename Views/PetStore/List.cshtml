@model IEnumerable<midterm_project.Models.Pet>

<div class="list-title">
    <h1 class="display-4 list-title">Welcome To Our Pet Store!</h1>
        <a class="btn btn-primary mt-3 float-end" asp-controller="PetStore" asp-action="Create">Create New Pet</a>
</div>

<div class="list-container">
<div class="container-fluid">
    <div class="row list">
    @foreach (var pet in Model ?? new List<Pet>())
    {
                <div class="col-4 list-contents">
                    <h4>@pet.PetSpecies</h4>
                    <img src="@pet.PhotoUrl" class="img-thumbnail rounded list-image">

                    <a class="btn btn-sm btn-secondary mb-3 ml-3 float-end" asp-controller="PetStore" asp-action="Detail"
                        asp-route-id="@pet.PetId">
                        Details
                    </a>
                    <a class="btn btn-sm btn-secondary mb-3 ml-3 float-end" asp-controller="PetStore" asp-action="Delete"
                        asp-route-id="@pet.PetId">
                        Delete Pet
                    </a>
                    <a class="btn btn-sm btn-light mb-3 float-end" asp-controller="PetStore" asp-action="Update"
                        asp-route-id="@pet.PetId">
                        Edit Pet
                    </a>
                </div>
    }
    </div>
</div>

    
</div>
